<div class="container-fluid px-4 py-4">
  <!-- Header Section -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card border-0 shadow-sm bg-gradient" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%)">
        <div class="card-body text-white p-4">
          <h3 class="fw-bold mb-2"><i class="bi bi-shop me-2"></i>Toko Barang Gudang</h3>
          <p class="mb-0 opacity-75">Temukan dan pesan barang yang Anda butuhkan</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Filter & Search Section -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <div class="row g-3">
            <!-- Search -->
            <div class="col-md-4">
              <div class="input-group">
                <span class="input-group-text bg-white">
                  <i class="bi bi-search"></i>
                </span>
                <input type="text" class="form-control" placeholder="Cari barang..." />
              </div>
            </div>

            <!-- Category Filter -->
            <div class="col-md-3">
              <select class="form-select">
                <option selected>Semua Kategori</option>
                <option value="1">Elektronik</option>
                <option value="2">Furniture</option>
                <option value="3">Alat Tulis</option>
                <option value="4">Makanan & Minuman</option>
              </select>
            </div>

            <!-- Price Range -->
            <div class="col-md-3">
              <select class="form-select">
                <option selected>Harga</option>
                <option value="1">Termurah</option>
                <option value="2">Termahal</option>
                <option value="3">< Rp 1.000.000</option>
                <option value="4">Rp 1.000.000 - 5.000.000</option>
                <option value="5">> Rp 5.000.000</option>
              </select>
            </div>

            <!-- View Cart Button -->
            <div class="col-md-2">
              <button class="btn btn-primary w-100 position-relative" data-bs-toggle="modal" data-bs-target="#cartModal">
                <i class="bi bi-cart3 me-1"></i>Keranjang
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="cartBadge"> 3 </span>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Products Grid -->
  <div class="row g-4">
    <% if (dataBarang.length === 0) { %>
    <span class="badge bg-success position-absolute top-0 end-0 m-3">Stok Barang Habis</span>
    <% } else {%> <% dataBarang.forEach(barang => { %>
    <!-- Product Card 1 -->
    <div class="col-12 col-sm-6 col-lg-4 col-xl-3">
      <div class="card border-0 shadow-sm h-100 product-card">
        <div class="position-relative">
          <div class="product-image bg-light d-flex align-items-center justify-content-center" style="height: 250px">
            <i class="bi bi-laptop text-primary" style="font-size: 80px"></i>
          </div>
          <% if (barang.stok === 0) { %>
          <span class="badge bg-success position-absolute top-0 end-0 m-3">Barang habis</span>
          <% } else if (barang.stok <= 5) { %>
          <span class="badge bg-warning position-absolute top-0 end-0 m-3">Barang Menipis</span>
          <% } else { %>
          <span class="badge bg-success position-absolute top-0 end-0 m-3">Tersedia</span>
          <% } %>
        </div>
        <div class="card-body">
          <div class="mb-2">
            <span class="badge bg-info text-dark"><%= barang.kategori ? barang.kategori.nama : "Tidak ada Kategori"%></span>
          </div>
          <h6 class="card-title fw-bold"><%= barang.nama %></h6>
          <!-- <p class="card-text text-muted small mb-3">Intel Core i7, 16GB RAM, 512GB SSD</p> -->
          <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
              <div class="text-primary fw-bold fs-5"><%= barang.harga.toLocaleString("id-ID") %></div>
              <small class="text-muted">Stok: <strong><%= barang.stok %></strong> unit</small>
            </div>
          </div>
          <div class="d-flex gap-2">
            <button class="btn btn-outline-primary btn-sm flex-fill" data-bs-toggle="modal" data-bs-target="#detailModal<%= barang.id %>"><i class="bi bi-eye"></i> Detail</button>
            <button class="btn btn-primary btn-sm flex-fill add-to-cart"><i class="bi bi-cart-plus"></i> Keranjang</button>
          </div>
        </div>
      </div>
    </div>
    <% }) %> <% } %>

    <!-- Pagination -->
    <div class="row mt-4">
      <div class="col-12">
        <nav>
          <ul class="pagination justify-content-center">
            <li class="page-item disabled">
              <a class="page-link" href="#"><i class="bi bi-chevron-left"></i></a>
            </li>
            <li class="page-item active"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
              <a class="page-link" href="#"><i class="bi bi-chevron-right"></i></a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>

  <!-- Cart Keranjang Modal -->
  <div class="modal fade" id="cartModal" tabindex="-1" aria-labelledby="cartModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title fw-bold" id="cartModalLabel"><i class="bi bi-cart3 text-primary me-2"></i>Keranjang Belanja</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <!-- Cart Items -->
          <div id="cartItems">
            <!-- Item 1 -->
            <div class="card mb-3 border-0 shadow-sm cart-item">
              <div class="card-body">
                <div class="row align-items-center">
                  <div class="col-md-2 text-center">
                    <i class="bi bi-laptop text-primary" style="font-size: 40px"></i>
                  </div>
                  <div class="col-md-4">
                    <h6 class="mb-1 fw-semibold">Laptop Dell XPS 15</h6>
                    <small class="text-muted">Elektronik</small>
                  </div>
                  <div class="col-md-3">
                    <div class="input-group input-group-sm">
                      <button class="btn btn-outline-secondary qty-minus" type="button">-</button>
                      <input type="number" class="form-control text-center qty-input" value="1" min="1" max="10" />
                      <button class="btn btn-outline-secondary qty-plus" type="button">+</button>
                    </div>
                  </div>
                  <div class="col-md-2">
                    <div class="fw-bold text-primary">Rp 15.000.000</div>
                  </div>
                  <div class="col-md-1 text-end">
                    <button class="btn btn-sm btn-outline-danger remove-item">
                      <i class="bi bi-trash"></i>
                    </button>
                  </div>
                </div>
              </div>
            </div>

            <!-- Item 2 -->
            <div class="card mb-3 border-0 shadow-sm cart-item">
              <div class="card-body">
                <div class="row align-items-center">
                  <div class="col-md-2 text-center">
                    <i class="bi bi-printer text-warning" style="font-size: 40px"></i>
                  </div>
                  <div class="col-md-4">
                    <h6 class="mb-1 fw-semibold">Printer HP LaserJet</h6>
                    <small class="text-muted">Elektronik</small>
                  </div>
                  <div class="col-md-3">
                    <div class="input-group input-group-sm">
                      <button class="btn btn-outline-secondary qty-minus" type="button">-</button>
                      <input type="number" class="form-control text-center qty-input" value="2" min="1" max="10" />
                      <button class="btn btn-outline-secondary qty-plus" type="button">+</button>
                    </div>
                  </div>
                  <div class="col-md-2">
                    <div class="fw-bold text-primary">Rp 7.000.000</div>
                  </div>
                  <div class="col-md-1 text-end">
                    <button class="btn btn-sm btn-outline-danger remove-item">
                      <i class="bi bi-trash"></i>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Empty Cart Message -->
          <div id="emptyCart" class="text-center py-5 d-none">
            <i class="bi bi-cart-x text-muted" style="font-size: 60px"></i>
            <p class="text-muted mt-3">Keranjang belanja Anda kosong</p>
          </div>
        </div>
        <div class="modal-footer flex-column">
          <div class="w-100 mb-3">
            <div class="d-flex justify-content-between mb-2">
              <span class="text-muted">Subtotal:</span>
              <span class="fw-semibold" id="subtotal">Rp 22.000.000</span>
            </div>
            <div class="d-flex justify-content-between mb-2">
              <span class="text-muted">PPN (11%):</span>
              <span class="fw-semibold" id="tax">Rp 2.420.000</span>
            </div>
            <hr />
            <div class="d-flex justify-content-between">
              <span class="fw-bold">Total:</span>
              <span class="fw-bold text-primary fs-5" id="total">Rp 24.420.000</span>
            </div>
          </div>
          <div class="w-100 d-flex gap-2">
            <button type="button" class="btn btn-outline-secondary flex-fill" data-bs-dismiss="modal"><i class="bi bi-arrow-left me-1"></i>Lanjut Belanja</button>
            <button type="button" class="btn btn-primary flex-fill" id="checkoutBtn"><i class="bi bi-credit-card me-1"></i>Checkout</button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Detail Product Modal -->
  <% dataBarang.forEach(barang => { %>
  <div class="modal fade" id="detailModal<%= barang.id %>" tabindex="-1" aria-labelledby="detailModalLabel<%= barang.id %>" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title fw-bold" id="detailModalLabel<%= barang.id %>">Detail Produk - <%= barang.nama %></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body">
          <div class="row">
            <!-- Gambar -->
            <div class="col-md-5">
              <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height: 300px">
                <i class="bi bi-laptop text-primary" style="font-size: 120px"></i>
              </div>
            </div>

            <!-- Detail Barang -->
            <div class="col-md-7">
              <span class="badge bg-info text-dark mb-2"> <%= barang.kategori ? barang.kategori.nama : "Tidak Ada kategori" %> </span>

              <h4 class="fw-bold mb-3"><%= barang.nama %></h4>

              <div class="mb-3">
                <span class="text-primary fw-bold fs-3"> Rp <%= barang.harga.toLocaleString("id-ID") %> </span>
              </div>

              <div class="mb-3">
                <span class="badge bg-success"> Stok Tersedia: <%= barang.stok %> </span>
              </div>

              <!-- ðŸ”¹ Input Quantity -->
              <div class="mb-3">
                <label for="qty<%= barang.id %>" class="form-label fw-semibold">Jumlah:</label>
                <div class="input-group" style="width: 150px">
                  <button class="btn btn-outline-secondary btn-sm" type="button" onclick="kurangiQty(<%= barang.id %>)">-</button>
                  <input type="number" id="qty<%= barang.id %>" class="form-control text-center" value="1" min="1" max="<%= barang.stok %>" />
                  <button class="btn btn-outline-secondary btn-sm" type="button" onclick="tambahQty(<%= barang.id %>)">+</button>
                </div>
              </div>

              <!-- ðŸ”¹ Tombol Checkout -->
              <div class="mt-4">
                <button class="btn btn-primary w-100" onclick="checkOut(<%= barang.id %>)"><i class="bi bi-bag-check"></i> Check Me</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% }) %>

  <style>
    .product-card {
      transition: all 0.3s ease;
    }

    .product-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
    }

    .product-image {
      transition: all 0.3s ease;
    }

    .product-card:hover .product-image {
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    }

    .cart-item {
      transition: all 0.3s ease;
    }

    .cart-item:hover {
      transform: translateX(5px);
    }

    .qty-input {
      width: 60px;
    }

    .qty-input::-webkit-inner-spin-button,
    .qty-input::-webkit-outer-spin-button {
      opacity: 1;
    }
  </style>
</div>

<script>
  // Fungsi tambah & kurang quantity
  function tambahQty(id) {
    const input = document.getElementById(`qty${id}`);
    input.value = parseInt(input.value) + 1;
  }

  function kurangiQty(id) {
    const input = document.getElementById(`qty${id}`);
    if (parseInt(input.value) > 1) {
      input.value = parseInt(input.value) - 1;
    }
  }

  async function checkOut(id) {
    try {
      const qty = document.getElementById(`qty${id}`).value;

      const data = {
        barangId: id,
        quantity: qty,
      };

      const response = await fetch("/shopping/create-order", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify(data),
      });

      const result = await response.json();
      console.log(result);
    } catch (error) {
      console.log(error);
    }
  }
</script>
